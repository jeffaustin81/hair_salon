<html>
    <head>
        <title>Clients</title>
        <link rel="stylesheet" href="/styles.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <ul class="list-group">
            <li class="list-group-item"><h1>{{ stylist.getStylistName }}</h1></li>

            {% if clients is not empty %}
                <li class="list-group-item"><h4>List of clients:</h4></li>
                
                    {% for client in clients %}
                        <li class="list-group-item"><h5><strong><a href="/clients/{{ client.getId }}">{{ client.getClientName }}</a></strong></h5></li>
                    {% endfor %}
                 
            {% else %}
                <li class="list-group-item"><h3>There are no clients for {{ stylist.getStylistName }} yet!</h3></li>
            {% endif %}
                </ul>
                <form action="/form_client" class="client_buttons">
                <!--<form action="/form_stylist">-->
                    <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId() }}">
                    <button type="submit" class="btn btn-info">Add new client</button>
                </form>
                <form action="/" class="client_buttons">
                    <button type="submit" class="btn btn-primary">Home</button>
                </form>

            {% if form_check == true %}
                <form action="/add_client" method="post">
                    <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId() }}">
                    <h4>Enter information about the client</h4>
                    <div class="form-group">
                        <label for="client_name">Name</label>
                        <input id="client_name" name="client_name" class="form-control" type="text" placeholder="Client Name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input id="email" name="email" class="form-control" type="text" placeholder="Client Email" required>
                    </div>
                    <button type="submit" class="btn btn-success">Add Client</button>
                </form>
            {% endif %}
        </div>
    </body>
</html>
